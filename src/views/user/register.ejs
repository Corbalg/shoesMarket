<!DOCTYPE html>
<html lang="en">

    <%-include('../partials/head.ejs', {title: 'Registrarse', style: '/user/register'})%>

<body>
    <%-include('../partials/header.ejs')%>
    <main>
        <section>
            <div class="register-title">
            <h2 class="recuperar">Crear cuenta</h2>
            </div>
            <form action="/user/register" method="POST" enctype="multipart/form-data" class="register-form">
                <div class="form">
                    <label for="name">Nombre</label>
                    <input type="text" name="name" id="name"
                    value="<%=locals.oldData ? oldData.name : null %>">
                    <% if (locals.errorsObjeto && errorsObjeto.name) { %>
                        <div>
                            <p class="error-msg"> <%= errorsObjeto.name.msg %> </p>
                        </div>
                    <% } %>
                </div>
                <div class="form"> 
                    <label for="last_name">Apellido</label>
                    <input type="text" name="last_name" id="last_name"
                    value="<%=locals.oldData ? oldData.last_name : null %>">
                    <% if (locals.errorsObjeto && errorsObjeto.last_name) { %>
                        <div>
                            <p class="error-msg"> <%= errorsObjeto.last_name.msg %> </p>
                        </div>
                    <% } %>
                </div>
                <div class="form">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email"
                    value="<%=locals.oldData ? oldData.email : null %>">
                    <% if (locals.errorsObjeto && errorsObjeto.email) { %>
                        <div>
                            <p class="error-msg"> <%= errorsObjeto.email.msg %> </p>
                        </div>
                    <% } %>
                </div>
                <div class="form">
                    <label for="password">Contraseña</label> 
                    <input type="password" name="password" id="password">
                    <% if (locals.errorsObjeto && errorsObjeto.password) { %>
                        <div>
                            <p class="error-msg"> <%= errorsObjeto.password.msg %> </p>
                        </div>
                    <% } %>
                </div>
                <div class="form">
                    <label for="avatar">Foto de perfil</label>
                    <input type="file" name="avatar" id="avatar">
                    <% if (locals.errorsObjeto && errorsObjeto.avatar) { %>
                        <div>
                            <p class="error-msg"> <%= errorsObjeto.avatar.msg %> </p>
                        </div>
                    <% } %>
                </div>
                <div class="caja-errors">
                    <div class="errors">
                        <ul></ul>
                    </div>
                </div>
                <div class="boton">
                    <button class="form-button" type="submit">Crear cuenta</button>
                </div>
            </form>
            <p class="login">¿Ya tienes una cuenta? <a href="login">Iniciar sesion</a></p>
        </section>
    </main>
    <%-include('../partials/footer.ejs')%>
    <script src="/js/register.js"></script>
</body>
</html>