<!DOCTYPE html>  
<html lang="en">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <%- include("../partials/head.ejs", {title: "Listado de producto", style: "/products/productList"}) %>
    <body>
    <%- include("../partials/header.ejs") %>
<div class="falsobody">

    <!-- Fede -->
    <aside class="aside-left">
            <div class="aside-title">

                <div>
                    <h2>Zapatillas<h2>
                </div>
                <div class="resultados">
                    <h4><span class="result"><%= productos.length %></span> <span class="result-2">Resultados</span><h4>
                </div>
            </div>
            <div class="filter-class">            
                <div class="class-arrive-today">
                    <p class="arrives div-animado" style="background-color: rgb(7, 140, 164); color: rgb(0, 0, 0);">ENVIOS GRATIS</p>
                    <p class="arrives div-animado" style="background-color: rgb(0, 0, 0); color: white;">SOLO POR HOY</p>
                </div>
            </div>
            <div class="gender-class">
                <div>
                    <h2>Precio</h2>
                </div>
                <div>
                    <form action="/product/list" method="get">
                        <p>
                            <input type="number" name="precioUno"> -
                            <input type="number" name="precioDos">
                        </p>
                        <button type="submit" class="aside-button">Buscar</button>
                    </form>
                </div>
            </div>
            <div class="waist-class">
                <div>
                    </a><h2>Talle</h2>
                </div>
                <div>
                    <form action="/product/list" method="get">
                        <p>
                            <input type="number" name="talleUno">
                        </p>
                        <button type="submit" class="aside-button">Buscar</button>
                    </form>
                </div>
            </div>
            <div class="brand-class-aside">
                <div>
                    <h2>Marca</h2>
                </div>
                <div class="brand-name">
                    <!-- ejemplo de filtro marca, y esto mismo podemos usar para buscar por talle o colores si los incluimos en lo que se obtiene query del searchBar -->
                    <a href="/product/list?searchBar=topper"><p>Topper</p></a> <!--Tenes que ponerle text-decoration: none; a los a de los filtros  de esta vista-->
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=jaguar"><p>Jaguar</p></a>
                </div class="brand-name">
                <div class="brand-name">
                    <a href="/product/list?searchBar=new+balance"><p>New Balance</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=adidas"><p>Adidas</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=nike"><p>Nike</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=kappa"><p>Kappa</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=puma"><p>Puma</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=fila"><p>Fila</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=atomik"><p>Atomik</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=converse"><p>Converse</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=dc+shoes"><p>Dc Shoes</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=john+foos"><p>John Foos</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=reebok"><p>Reebok</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=wilson"><p>Wilson</p></a>
                </div>
            </div>
            <div class="location-class">
                <div>
                    <h2>Origen</h2>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=argentina"><p>Argentina</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=españa"><p>España</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=italia"><p>Italia</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=estados+unidos"><p>Estados Unidos</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=alemania"><p>Alemania</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=china"><p>China</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=uruguay"><p>Uruguay</p></a>
                </div>
                <div class="brand-name">
                    <a href="/product/list?searchBar=indonesia"><p>Indonesia</p></a>
                </div>
            </div>
    </aside>
    <main>
            <section class="section-right">


                <!---->
                

                <% productos.forEach(product => {  %>                
                <article>                                       
                    <div class="cart-class">
                        <div class="cart-image">
                           <a href="/product/detail/<%=product.id %>"> <img src="/images/products/<%=product.image %>" alt="Cafetera Moulinex">
                        </div>             
                        <div class="item-box">
                                <h4 class="brand-class"> <%= product.brand ? product.brand.name : ""%> </h4>  
                                <p class="description-class"><%= product.description %></p>
                                <p class="name-class"><%= product.name %></p> 
       
                                <i class="fa-solid fa-star reputation-icon"></i>
                                <i class="fa-solid fa-star reputation-icon"></i>
                                <i class="fa-solid fa-star reputation-icon"></i>
                                <i class="fa-solid fa-star reputation-icon"></i>
                                <i class="fa-solid fa-star-half-stroke reputation-icon"></i>
                 
                                <h2 class="precio price-class">$ <%= product.price.toLocaleString('es-ES')%></h2>                            
                                <% if(product.discount > 0){%>
                                <div class="discount-class">
                                    <p><%=product.discount + "%"%> Off</p>
                                </div>
                                <% } %>
                                <p class="arrives">Llega gratis hoy</p>
                            </a>
                        </div>
                    </div>                  
                </article>
                <%    }); %>
            </section>
    </main>
</div>

    <%- include("../partials/footer.ejs") %>
</body>
</html>